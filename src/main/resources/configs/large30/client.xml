<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE clients SYSTEM "../client.dtd">
<clients>
    <client>
        <id>client1</id>
        <frequency>100</frequency>
        <targets>
            <target>
                <nodeId>1:2</nodeId>
                <targetPort>client1-1:2</targetPort>
                <async>true</async>
                <query>bool @temp > 10 dir ne 2</query>
                <initialDelay>100</initialDelay>
            </target>
            <target>
                <nodeId>1:1</nodeId>
                <targetPort>client1-1:1</targetPort>
                <async>true</async>
                <query>bool @temp > 10 dir ne 2</query>
                <initialDelay>200</initialDelay>
            </target>
        </targets>
        <inboundPorts>
            <port for="request-result" uri="client1:in:request-result"/>
        </inboundPorts>
        <outboundPorts>
            <port for="lookup" uri="client1:out:lookup"/>
            <port for="clock" uri="client1:out:clock"/>
        </outboundPorts>
    </client>
    <client>
        <id>client2</id>
        <frequency>2000</frequency>
        <targets>
            <target>
                <nodeId>3:1</nodeId>
                <targetPort>client2-3:1</targetPort>
                <async>false</async>
                <query>gather (@temp @humidity) (flood this 200)</query>
                <initialDelay>400</initialDelay>
            </target>
            <target>
                <nodeId>2:3</nodeId>
                <targetPort>client2-2:3</targetPort>
                <async>false</async>
                <query>bool (@temp &lt; -10) (dir nw 2)</query>
                <initialDelay>200</initialDelay>
            </target>
        </targets>
        <inboundPorts>
            <port for="request-result" uri="client2:in:request-result"/>
        </inboundPorts>
        <outboundPorts>
            <port for="lookup" uri="client2:out:lookup"/>
            <port for="clock" uri="client2:out:clock"/>
        </outboundPorts>
    </client>
</clients>
